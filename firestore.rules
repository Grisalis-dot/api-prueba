rules_version = '2';

/**
 * FIRESTORE SECURITY RULES - DEMO MODE
 * 
 * Para esta prueba técnica, permitimos que cualquier usuario autenticado 
 * (incluyendo sesión anónima) pueda leer y escribir en la colección de activos.
 */

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /assets/{assetId} {
      // Permitimos CRUD completo a cualquier usuario firmado para facilitar la evaluación
      allow read, write: if isSignedIn();
    }

    match /roles_admin/{uid} {
      allow get: if isSignedIn() && request.auth.uid == uid;
      allow list: if isSignedIn();
      allow write: if false;
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
